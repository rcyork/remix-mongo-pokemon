// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Profile {
  firstName String
  lastName  String
}

model User {
  id String @id @map("_id") @default(auto()) @db.ObjectId
  email String @unique
  password String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile Profile
  authoredPokemon Pokemon? @relation("AuthoredPokemon")
}

model Pokemon {
  id String @id @map("_id") @default(auto()) @db.ObjectId
  createdAt DateTime @default(now())
  name String
  weight Int
  author User @relation(references: [id], fields: [authorId], "AuthoredPokemon") 
  authorId String @db.ObjectId @unique
}

enum Color {
  RED
  GREEN
  YELLOW
  BLUE
  WHITE
}

